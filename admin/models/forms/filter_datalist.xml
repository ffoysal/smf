<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label=""
            hint="COM_SMF_LAST_NAME"
        />
        <field name="gender" type="list" default="" label="COM_SMF_GENDER" description="COM_SMF_GENDER_DESC" onchange="this.form.submit();">
            <option value="">COM_SMF_SELECT_GENDER</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </field>
    </fields>
 
    <fields name="list">
        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="20"
            label="COM_CONTENT_LIST_LIMIT"
            description="COM_CONTENT_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>